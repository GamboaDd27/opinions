<%include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">New Poll</div>
    <form class="ui form" action="/polls" method="POST">
        <div class="field">
            <label>Question</label>
             <input type="text" placeholder="Enter your question here" name="poll[question]">
        </div>
         <div class="field">
            <label>Image link(optional)</label>
             <input type="text" placeholder="Enter an image link here" name="poll[image]">
        </div>
         <div class="field">
            <label>Author's name(optional)</label>
            <input type="text" placeholder="Enter your name here" name="poll[author]">
             
        </div>
         <div class="field">
            <label>Options</label>
            <input type="text" placeholder="Option A" name="poll[optiona]">
            <input type="text" placeholder="Option B" name="poll[optionb]">
            <input type="text" placeholder="Option C(optional)" name="poll[optionc]">
        </div>
         <input class="ui black basic button big" type="submit">
    </form>
</div>
<%include ./partials/footer %>